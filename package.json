{
    "name": "@slimio/markdown-dependencies",
    "version": "0.1.0",
    "description": "Create Markdown Dependencies for SlimIO projects",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "prepublishOnly": "pkg-ok",
        "test": "cross-env psp && ava --verbose",
        "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
        "coverage": "nyc npm test",
        "report": "nyc report --reporter=html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SlimIO/Markdown-Dependencies.git"
    },
    "keywords": [
        "SlimIO",
        "markdown",
        "generator",
        "tool",
        "cli"
    ],
    "author": "SlimIO",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SlimIO/Markdown-Dependencies/issues"
    },
    "homepage": "https://github.com/SlimIO/Markdown-Dependencies#readme",
    "dependencies": {
        "@slimio/arg-parser": "^0.3.1",
        "@slimio/npm-registry": "^0.5.0",
        "clipboardy": "^2.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.6.1",
        "@commitlint/config-conventional": "^7.6.0",
        "@escommunity/minami": "^1.0.0",
        "@slimio/eslint-config": "^2.0.4",
        "@slimio/psp": "^0.4.0",
        "ava": "^1.4.1",
        "cross-env": "^5.2.0",
        "dotenv": "^8.0.0",
        "eslint": "^5.16.0",
        "husky": "^2.3.0",
        "jsdoc": "^3.6.2",
        "nyc": "^14.1.1",
        "pkg-ok": "^2.3.1"
    },
    "engines": {
        "node": ">=10"
    },
    "husky": {
        "hooks": {
            "pre-push": "cross-env eslint bin/index.js && npm test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "nyc": {
        "check-coverage": true,
        "per-file": false,
        "lines": 98,
        "statements": 98,
        "functions": 98,
        "branches": 90
    },
    "bin": {
        "mddep": "./bin/index.js"
    }
}
